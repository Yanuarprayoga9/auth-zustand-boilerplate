generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
  GUEST
}

model User {
  id       String    @id @default(cuid())
  name     String?
  email    String?   @unique
  password String?
  role     UserRole  @default(USER)
//  accounts Account[]
  posts    Post[]
}

